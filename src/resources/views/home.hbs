<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4">

        <div class="card card-course-item" style="width: 18rem;height:450px">
          <a href="/courses/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="{{this.image}}"
            />
          </a>

          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>

            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Mua khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>